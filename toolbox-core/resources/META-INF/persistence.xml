<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="db" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.codigo.aplios.toolbox.core.domain.evidence.CreditCard</class>
        <class>com.codigo.aplios.toolbox.core.domain.catalog.Product</class>
        <class>com.codigo.aplios.toolbox.core.domain.catalog.Category</class>
        <class>com.codigo.aplios.toolbox.core.domain.catalog.CategoryAttribute</class>


        <!-- <class>com.codigo.aplios.allmarks.system.repository.AuditEntry</class> -->
        <!-- <class>com.codigo.aplios.allmarks.system.repository.AuditField</class> -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:d:/databases;shutdown=false;ifexists=false" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="eclipselink.logging.level" value="FINE" />
            <property name="eclipselink.weaving" value="static"></property>
            <property name="eclipselink.cache.size.default" value="5000" />
            <property name="eclipselink.flush-clear.cache" value="drop" />
            <property name="eclipselink.jdbc.native-sql" value="true" />
            <property name="eclipselink.jdbc.cache-statements" value="true" />
            <property name="eclipselink.jdbc.cache-statements.size" value="100" />
            <!-- <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/> <property name="eclipselink.ddl-generation.output-mode" 
            value="database"/> -->
            <property name="eclipselink.target-database" value="HSQL" />
            <!-- <property name="eclipselink.profiler" value="PerformanceProfiler"/> -->
        </properties>
    </persistence-unit>
    <persistence-unit name="shopdb" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.codigo.aplios.system.domain.Product</class>
        <class>com.codigo.aplios.system.domain.Category</class>
        <class>com.codigo.aplios.system.domain.CategoryAttribute</class>
        <class>com.codigo.aplios.system.domain.Currency</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://DESKTOP-GOT05ET\APLIOS:65188;databaseName=BITSHOP;integratedSecurity=true;" />

            <property name="javax.persistence.schema-generation.database.action" value="none" />
            <property name="eclipselink.logging.level" value="FINE" />
            <property name="eclipselink.cache.size.default" value="5000" />
            <property name="eclipselink.flush-clear.cache" value="drop" />
            <property name="eclipselink.jdbc.native-sql" value="true" />
            <property name="eclipselink.jdbc.cache-statements" value="true" />
            <property name="eclipselink.jdbc.cache-statements.size" value="100" />
            <property name="eclipselink.ddl-generation" value="none" />
            <property name="eclipselink.ddl-generation.output-mode" value="database" />

        </properties>
    </persistence-unit>
</persistence>


